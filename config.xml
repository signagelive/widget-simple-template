<?xml version="1.0"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:sl="http://www.signagelive.com/widgets" id="http://www.signagelive.com/widget-simple-template" version="0.0.1" width="1920" height="1080">
	<!-- Name of the widget displayed in Signagelive as the name of the Media Asset -->
	<name>
		Simple Example
	</name>
	<description>
		A simple widget demonstrating the configuration file format how preferences can be loaded and used
	</description>
	<!-- Widget author -->
	<author>
		Signagelive Limited
	</author>
	<!-- Start page for widget -->
	<content src="index.html" />
	<!-- Icons to display in Signagelive, not essential as Signagelive will attempt to generate a preview if these are omitted -->
	<icon src="media/thumb.png" sl:thumbnail="large" />
	<icon src="media/thumb.png" sl:thumbnail="small" />
	<!-- Preferences (Optional) -->
	<preference name="Text" value="Hello World" sl:type="string" sl:required="true" />
</widget>
